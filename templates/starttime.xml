{% macro start_time(datetime) %}
  <starttime>
    <year>{{ datetime | date(format="%Y") }}</year>
    <month>{{ datetime | date(format="%m") }}</month>
    <day>{{ datetime | date(format="%d") }}</day>
    <hour>{{ datetime | date(format="%k") }}</hour>
    <minute>{{ datetime | date(format="%M") }}</minute>
    <second>{{ datetime | date(format="%S") }}</second>
  </starttime>
{% endmacro start_time %}